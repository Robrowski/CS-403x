<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:focusableInTouchMode="false"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/imageReview"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_width="match_parent"
            android:minHeight="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="plant photo"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:clickable="true"
                android:onClick="onAccept"
                style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:textColor="@color/primary_text_default_material_dark"
                android:gravity="center_vertical|right" />

        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <com.software.shell.fab.ActionButton
        android:layout_alignParentBottom="true"
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/fab_bottom_toolbar"
        fab:button_color="@color/colorAccent"
        fab:button_colorPressed="@color/colorAccent"
        fab:hide_animation="@anim/fab_roll_to_down"
        fab:image="@drawable/discoverability_select_white"
        fab:image_size="36dp"
        fab:shadow_color="#757575"
        fab:shadow_radius="1.0dp"
        fab:shadow_xOffset="0.5dp"
        fab:shadow_yOffset="1.0dp"
        fab:show_animation="@anim/fab_scale_up"
        fab:type="normal"
        android:cropToPadding="false" />

    <com.software.shell.fab.ActionButton
        android:layout_alignParentBottom="true"
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="@dimen/fab_menu_mini_left"
        android:visibility="invisible"
        android:layout_marginBottom="@dimen/fab_menu_button1"
        fab:button_color="@color/colorAccent"
        fab:button_colorPressed="@color/colorAccent"
        fab:hide_animation="@anim/fab_scale_down"
        fab:image="@drawable/secret_icon_white"
        fab:image_size="24dp"
        fab:shadow_color="#757575"
        fab:shadow_radius="1.0dp"
        fab:shadow_xOffset="0.5dp"
        fab:shadow_yOffset="1.0dp"
        fab:show_animation="@anim/fab_scale_up"
        fab:type="mini"
        android:cropToPadding="false" />

    <com.software.shell.fab.ActionButton
        android:layout_alignParentBottom="true"
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="@dimen/fab_menu_mini_left"
        android:visibility="invisible"
        android:layout_marginBottom="@dimen/fab_menu_button2"
        fab:button_color="@color/colorAccent"
        fab:button_colorPressed="@color/colorAccent"
        fab:hide_animation="@anim/fab_scale_down"
        fab:image="@drawable/medium_icon_white"
        fab:image_size="24dp"
        fab:shadow_color="#757575"
        fab:shadow_radius="1.0dp"
        fab:shadow_xOffset="0.5dp"
        fab:shadow_yOffset="1.0dp"
        fab:show_animation="@anim/fab_scale_up"
        fab:type="mini"
        android:cropToPadding="false" />

    <com.software.shell.fab.ActionButton
        android:layout_alignParentBottom="true"
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="@dimen/fab_menu_mini_left"
        android:visibility="invisible"
        android:layout_marginBottom="@dimen/fab_menu_button3"
        fab:button_color="@color/colorAccent"
        fab:button_colorPressed="@color/colorAccent"
        fab:hide_animation="@anim/fab_scale_down"
        fab:image="@drawable/far_icon_white"
        fab:image_size="24dp"
        fab:shadow_color="#757575"
        fab:shadow_radius="1.0dp"
        fab:shadow_xOffset="0.5dp"
        fab:shadow_yOffset="1.0dp"
        fab:show_animation="@anim/fab_scale_up"
        fab:type="mini"
        android:cropToPadding="false" />


</RelativeLayout>